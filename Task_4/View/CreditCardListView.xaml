<UserControl x:Class="View.CreditCardListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <DataTemplate x:Key="RowButtons">
            <StackPanel Orientation="Horizontal">
                <!--<Button Content="Edit" Command="{Binding ShowEditCommand}" />
                <Button x:Name="btnDeleteCreditCard" Content="Delete" Command="{Binding DeleteCommand}" />-->
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel>
        <Button  x:Name="btnAddCreditCard" Content="Add Credit Card" Width="90" HorizontalAlignment="Center" Margin="10 10 0 10" Command="{Binding ShowAddCommand}" />
        <ListView Height="100" x:Name="lsvCreditCardList" ItemsSource="{Binding CreditCardList}" SelectedItem="{Binding SelectedCreditCard}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Card Number" DisplayMemberBinding="{Binding CardNumber}" Width="100" />
                    <GridViewColumn Header="Card Type" DisplayMemberBinding="{Binding CardType}" Width="100" />
                    <GridViewColumn Header="Expiration Month" DisplayMemberBinding="{Binding ExpMonth}" Width="100" />
                    <GridViewColumn Header="Expiration Year" DisplayMemberBinding="{Binding ExpYear}" Width="100" />
                    <!--<GridViewColumn CellTemplate="{StaticResource RowButtons}" />-->
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>